{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "node", 
      "vue", 
      "vite/client", 
      "vitest/globals"
    ]
  },
  "include": [ 
    "@/**/*.d.ts",
    "@/**/*.d.vue",
    "@/**/*.ts",
    "@/**/*.mts", 
    "@/**/*.tsx", 
    "@/**/*.vue"
  ],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
